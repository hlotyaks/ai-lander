{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Lander",
      "type": "process", 
      "command": "dotnet",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run All Tests",
      "type": "process",
      "command": "dotnet",
      "args": [
        "test",
        "--no-build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
