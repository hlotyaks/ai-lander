{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Lander",
      "program": "dotnet",
      "args": ["test", "--no-build", "--logger", "console;verbosity=detailed"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Test Assets Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Run All Tests",
      "program": "${workspaceFolder}/Tests/bin/Debug/net8.0-windows/Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Tests",
      "console": "internalConsole"
    },
    {
      "name": "Launch LanderGame",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/LanderGame/bin/Debug/net8.0-windows/LanderGame.dll",
      "args": [],
      "cwd": "${workspaceFolder}/LanderGame",
      "console": "internalConsole"
    }
  ]
}
